{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "packageRules": [
    {
      "description": "Pin GitHub Actions to specific commit SHAs",
      "matchManagers": [
        "github-actions"
      ],
      "versioning": "github-tags",
      "pinDigests": true,
      "enabled": true,
      "automerge": false,
      "labels": [
        "dependencies"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.github/workflows/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "['\"](?<currentValue>v?[\\d\\.]+)['\"].*# renovate: datasource=(?<datasource>[^\\s]+)\\s+depName=(?<depName>[^\\s]+)"
      ],
      "datasourceTemplate": "{{datasource}}",
      "depNameTemplate": "{{depName}}",
      "versioningTemplate": "semver"
    }
  ],
  "platformAutomerge": true
}

